<%- model_class = User -%>
<div class="page-header">
  <h1>用户管理</h1>
</div>





<form  class="form-inline" id="login" name="login" method ="get"  action="/users">  
  <div class="widget-buttons" style="width: 300px;display:inline-block;">
    <span class="input-icon" >
      <input type="text" class="form-control input-xs" id="query_name" name="query_name"  placeholder="用户名/编码" style="width: 156px;">
    </span>
  </div>
  <div style="width: 300px;display:inline-block;">
    <input id="subLogin" class="btn btn-primary" name ="subLogin" type="submit" value="查询" />
  </div>
</form>


<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>登录账户</th>
      <th>用户名</th>
      <th>密码</th>
      <th>用户类型</th>
      <th>创建时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.id, user_path(user) %></td>
      <td><%= user.user_code %></td>
      <td><%= user.user_name %></td>
      <td><%= user.password %></td>
      <td><%= user.user_type %></td>
      <td><%= user.created_at.strftime('%Y-%m-%d %H:%M:%S').to_s %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_user_path(user), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        user_path(user),
        :method => :delete,
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-xs btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
  <div style="text-align:right" >
    <%=paginate@users%>
  </div>
<%= link_to t('.new', :default => t("helpers.links.new")),
new_user_path,
:class => 'btn btn-primary' %>
